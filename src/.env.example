# BugStore API Environment Configuration
# Copy this file to .env and update with your values

# Application Environment
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
DB_CONNECTION_STRING=Server=localhost;Database=BugStore;User Id=sa;Password=YourStrong@Password;TrustServerCertificate=True;
# DB_USER=bugstore_user
# DB_PASSWORD=your_secure_password

# API Configuration
API_PORT=5000
API_HTTPS_PORT=5001

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=Information

# JWT Configuration (if using authentication)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_ISSUER=BugStore.Api
# JWT_AUDIENCE=BugStore.Client
# JWT_EXPIRY_MINUTES=60

# Email Configuration (if using email services)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@bugstore.com

# External Services
# REDIS_CONNECTION=localhost:6379
# STORAGE_CONNECTION_STRING=your_storage_connection_string

# Feature Flags
# ENABLE_SWAGGER=false
# ENABLE_CORS=true
